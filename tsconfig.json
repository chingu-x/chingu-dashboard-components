{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "types": ["vite/client", "vitest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/chingu-theme.js"],
  "exclude": ["node_modules", "dist"]
}
